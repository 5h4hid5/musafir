<div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet mdl-cell--4-col-phone main-post mdl-card mdl-shadow--3dp">
  <div class="mdl-card__media">
    <img src="<%= item.img_url %>" alt="" style="max-width: 100%"/>
  </div>
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">
      <%- item.title || item.link %>
    </h2>
  </div>
  <div class="mdl-card__supporting-text">
    <ul class="post-meta">
      <li><i class="fa fa-calendar-o" aria-hidden="true"></i> প্রকাশকাল: <a href=""><%= item.date.format(config.date_format) %></a></li>
      <span style="margin-right: 16px;"></span>
      <li><i class="fa fa-tags" aria-hidden="true"></i> বিভাগ:
        <%- partial('article-categories', {item: item}) %>
      </li>
    </ul>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <div class="mdl-card__supporting-text">
      <%- item.content %>
    </div>
  </div>


  <div class="mdl-card__actions mdl-card--border">
    <div class="mdl-card__supporting-text">
      <%- partial('social-share') %>
    </div>
  </div>

  <div class="mdl-card__actions mdl-card--border">
    <div class="mdl-card__supporting-text post-nav">

      <div class="mdl-grid">

        <%- partial('pager') %>

      </div>

    </div>
  </div>

  <div class="mdl-card__actions mdl-card--border">
    <div class="mdl-card__supporting-text">

      <%- partial('comments') %>

    </div>
  </div>
</div>
